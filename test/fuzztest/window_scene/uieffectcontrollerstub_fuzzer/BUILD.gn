import("//build/config/features.gni")
import("//build/test.gni")
import("../../../../windowmanager_aafwk.gni")

module_output_path = "window_manager/window_manager"

##############################fuzztest##########################################
ohos_fuzztest("UIEffectControllerStubFuzzTest") {
  fuzz_config_file = "."
  module_out_path = module_output_path

  include_dirs = [ "${window_base_path}/window_scene/session_manager/include" ]
  cflags = [
    "-g",
    "-O0",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "uieffectcontrollerstub_fuzzer.cpp" ]

  deps = [
    "${window_base_path}/window_scene/session:ui_effect_controller",
    "${window_base_path}/window_scene/session:ui_effect_controller_client",
  ]

  external_deps = [
    "accessibility:accessibility_common",
    "accessibility:accessibility_interface",
    "bundle_framework:appexecfwk_base",
    "c_utils:utils",
    "hilog:libhilog",
    "image_framework:image_native",
    "ipc:ipc_single",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []

  deps += [
    # deps file
    ":UIEffectControllerStubFuzzTest",
  ]
}
